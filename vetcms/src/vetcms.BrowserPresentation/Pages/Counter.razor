@page "/counter"
@using vetcms.ClientApplication;
@using vetcms.ClientApplication.Features.IAM.LoginUser;

@inject MediatR.IMediator Mediator
@inject IDialogService DialogService
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: <FluentBadge Appearance="Appearance.Neutral">@currentCount</FluentBadge></p>

<FluentButton Appearance="Appearance.Accent" @onclick="IncrementCount">Click me</FluentButton>

@code {
    private int currentCount = 0;

    private async Task IncrementCount()
    {
        await Mediator.Send(new LoginUserClientCommand(DialogService));
        currentCount++;
    }
}
